<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="456.0" prefWidth="584.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.LoginController">

    <!-- Username Field -->
    <Label layoutX="115.0" layoutY="154.0" prefHeight="22.0" prefWidth="86.0" text="Username :">
      <font>
         <Font name="System Bold" size="15.0" />
      </font></Label>
    <TextField fx:id="txtUsername" layoutX="235.0" layoutY="149.0" prefHeight="38.0" prefWidth="238.0" promptText="Enter Username or User ID" />

    <!-- Password Field -->
    <Label layoutX="115.0" layoutY="240.0" prefHeight="22.0" prefWidth="86.0" text="Password :">
      <font>
         <Font name="System Bold" size="15.0" />
      </font></Label>
    <PasswordField fx:id="txtPassword" layoutX="235.0" layoutY="235.0" prefHeight="38.0" prefWidth="238.0" promptText="Enter Password" />

    <!-- Login Button -->
    <Button fx:id="btnLogin" layoutX="217.0" layoutY="338.0" onAction="#handleLoginAction" prefHeight="52.0" prefWidth="154.0" style="-fx-background-color: #0A97B0; -fx-text-fill: white; -fx-border-radius: 20;" text="Login">
      <font>
         <Font name="Accidental Presidency" size="25.0" />
      </font>
      <opaqueInsets>
         <Insets top="5.0" />
      </opaqueInsets></Button>
    <Label layoutX="168.0" layoutY="47.0" prefHeight="50.0" prefWidth="253.0" text="- Login Page - ">
        <font>
            <Font name="System Bold" size="34.0" />
        </font>
    </Label>

</AnchorPane>
